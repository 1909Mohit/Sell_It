<% layout('layouts/boilerplate')%>

    <div class="container">
        <div class="text-center mb-4">
            <h2>All Products</h2>
        </div>

        <% for (let product of products){%>
            <div class="card mb-3 border border-5 rounded-3 p-2">
                <div class="row">
                    <div class="col-md-4 ">
                        <%if(product.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=product.images[0].url%>">
                            <% }else {%>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/sellit/lz8jjv2gyynjil7lswf4.png">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= product.title %>
                            </h5>

                            <p class="card-text">
                                <%= product.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                  +91 <%= product.contacts%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/products/<%=product._id%>">View
                                <%=product.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>